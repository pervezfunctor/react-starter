{
  "name": "react-starter",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/chance": "^1.0.1",
    "@types/jest": "23.3.13",
    "@types/node": "10.12.21",
    "@types/react": "16.8.1",
    "@types/react-dom": "16.0.11",
    "@types/yup": "^0.26.7",
    "axios": "^0.18.0",
    "chance": "^1.0.18",
    "date-fns": "^1.30.1",
    "husky": "^1.3.1",
    "io-ts": "^1.7.1",
    "lint-staged": "^8.1.2",
    "npm": "^6.7.0",
    "react": "^16.8.0-alpha.1",
    "react-dom": "^16.8.0-alpha.1",
    "react-hot-reload.macro": "^2.0.2",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-scripts": "2.1.3",
    "react-use": "^5.2.1",
    "tcomb": "^3.2.29",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-immutable": "^5.1.2",
    "tslint-react": "^3.6.0",
    "typescript": "3.3.1",
    "typescript-tslint-plugin": "^0.3.1",
    "yup": "^0.26.10"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:single": "CI=true react-scripts test",
    "lint:cmd": "tslint -p tsconfig.commit.json -c tslint.commit.json",
    "lint": "yarn lint:cmd 'src/**/*.tsx' 'src/**/*.ts'",
    "lint:fix": "yarn lint --fix",
    "validate:types": "tsc --noEmit -p tsconfig.commit.json",
    "validate": "yarn lint && yarn validate:types && yarn test:single",
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build",
    "all": "yarn validate && yarn start",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn validate"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn lint:cmd --fix",
      "git add"
    ],
    "src/**/*.{ts,tsx,js,jsx,json,css}": [
      "yarn prettier --write",
      "git add"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "react-docgen-typescript": "^1.12.3",
    "react-styleguidist": "^8.0.6"
  }
}
