{
  "name": "react-starter",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/chance": "1.0.4",
    "@types/jest": "24.0.15",
    "@types/node": "12.0.10",
    "@types/react": "16.8.22",
    "@types/react-dom": "16.8.4",
    "@types/yup": "0.26.18",
    "axios": "0.19.0",
    "chance": "1.0.18",
    "cross-env": "5.2.0",
    "date-fns": "1.30.1",
    "fp-ts": "1.19.3",
    "husky": "2.7.0",
    "io-ts": "1.10.2",
    "io-ts-reporters": "0.0.21",
    "io-ts-types": "0.4.7",
    "jest-dom": "3.5.0",
    "lint-staged": "8.2.1",
    "prettier": "1.18.2",
    "react": "16.8.6",
    "react-docgen-typescript": "1.12.5",
    "react-dom": "16.8.6",
    "react-router": "5.0.1",
    "react-router-dom": "5.0.1",
    "react-scripts": "3.0.1",
    "react-styleguidist": "9.1.6",
    "react-testing-library": "8.0.1",
    "rimraf": "2.6.3",
    "tcomb": "3.2.29",
    "tslint": "5.18.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-immutable": "6.0.0",
    "tslint-react": "4.0.0",
    "typescript": "3.5.2",
    "typescript-tslint-plugin": "0.5.3",
    "yup": "0.27.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:single": "CI=true react-scripts test",
    "lint:cmd": "tslint -p tsconfig.commit.json -c tslint.commit.json",
    "lint": "yarn lint:cmd 'src/**/*.tsx' 'src/**/*.ts'",
    "lint:fix": "yarn lint --fix",
    "types": "tsc --noEmit -p tsconfig.commit.json",
    "types:watch": "yarn types --watch",
    "validate": "yarn lint && yarn types && yarn test:single",
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build",
    "all": "yarn validate && yarn start",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn validate",
      "pre-build": "yarn validate"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn lint:cmd --fix",
      "git add"
    ],
    "src/**/*.{ts,tsx,js,jsx,json,css}": [
      "yarn prettier --write",
      "git add"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
