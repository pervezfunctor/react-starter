{
  "extends": "./tslint.json",
  "rules": {
    "ordered-imports": {
      "import-sources-order": "case-insensitive",
      "named-import-order": "case-insensitive",
      "module-source-path": "basename",
      "grouped-imports": true
    },

    "no-unused-variable": true,
    "ban-ts-ignore": true,
    "no-empty-interface": true,
    "no-debugger": true,
    "no-console": true
  },

  "defaultSeverity": "error"
}
